<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory>
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.password">root</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hastaneadmin?useUnicode=true&amp;amp;characterEncoding=UTF-8</property>
  <property name="hibernate.connection.username">root</property>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
  <property name="hibernate.show_sql">true</property>
  <property name="hibernate.use_sql_comments">true</property>
  <property name="hibernate.format_sql">true</property>
  <property name="hibernate.hbm2ddl.auto">update</property>
  <mapping class="com.hastane.entity.Brans"/>
  <mapping class="com.hastane.entity.Doktor"/>
  <mapping class="com.hastane.entity.Hasta"/>
  <mapping class="com.hastane.entity.Il"/>
  <mapping class="com.hastane.entity.Ilce"/>
  <mapping class="com.hastane.entity.Klinik"/>
  <mapping class="com.hastane.entity.Randevu"/>
 </session-factory>
</hibernate-configuration>
